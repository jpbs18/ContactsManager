@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" method="get" class="link-hover">Back to Persons List</a>
<h2>@ViewBag.Title</h2>
<h3>Are you sure you want to delete this record?</h3>

<div class="w-50">
    <form asp-controller="Persons" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Name" class="form-label">Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" disabled/>
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="BirthDate" class="form-label">Date of Birth</label>
            </div>
            <div class="flex-1">
                <input asp-for="BirthDate" class="form-input" disabled />
                <span asp-validation-for="BirthDate" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Address" class="form-label">Address</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Address" class="form-input" disabled></textarea>
                <span asp-validation-for="Address" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>
    </form>
</div>